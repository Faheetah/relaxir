<h1>Ingredients</h1>

<%= if @current_user && @current_user.is_admin do %>
<h4>
  <%= link "+ New Ingredient", to: Routes.ingredient_path(@conn, :new) %>
</h4>
<% end %>

<%= for ingredient <- @ingredients do %>
<h4>
  <%= link ingredient.name, to: Routes.ingredient_path(@conn, :show, ingredient) %>
</h4>
<% end %>
