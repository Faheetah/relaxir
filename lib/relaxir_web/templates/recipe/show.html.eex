<h1>Show Recipe</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @recipe.title %>
  </li>

  <li>
    <strong>Directions:</strong>
    <%= @recipe.directions %>
  </li>

</ul>

<%= if @current_user && @current_user.is_admin do %>
<span><%= link "Edit", to: Routes.recipe_path(@conn, :edit, @recipe) %></span>
<span><%= link "Back", to: Routes.recipe_path(@conn, :index) %></span>
<% end %>
