<%= if @current_user do %>
  <li class="navigation-item"><%= link @current_user.email, to: Routes.user_settings_path(@conn, :edit) %></li>
  <li class="navigation-item"><%= link "Log out", to: Routes.user_session_path(@conn, :delete), method: :delete %></li>
<% else %>
  <li class="navigation-item"><%= link "Register", to: Routes.user_registration_path(@conn, :new) %></li>
  <li class="navigation-item"><%= link "Log in", to: Routes.user_session_path(@conn, :new) %></li>
<% end %>
